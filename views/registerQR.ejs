<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <!-- Bootstrap CSS -->
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        
     <!-- Semantic CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">

     <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">

     <link rel="stylesheet" href="/css/main.css">
    <title>Registration</title>
</head>
<body>
    <div class="container">
        <% if(error.length > 0 || success.length > 0){ %>
            <div class="flashMsg">
                <div class="centerAlign">
                    <% if(error && error.length > 0){ %>
                        <div class="ui floating error message flashSize">
                            <i class="close icon exitFlash"></i>
                            <div><%= error %></div>
                        </div>
                    <% } %>
                    <% if(success && success.length > 0){ %>
                        <div class="ui floating success message flashSize">
                            <i class="close icon exitFlash"></i>
                            <div><%= success %></div>
                        </div>
                    <% } %>
                </div>
            </div>
        <% } %>
        <form action="/register/qrcode" method="POST">
            <div class="regForm">
                <h1 class="ui header center aligned editHeader">Register on STI College Marikina 2020 Expo</h1>
                <div class="ui form">
                    <div class="field">
                        <label for="firstName">Your First Name<span class="requiredField">*</span></label>
                        <input type="text" placeholder="First Name" name="firstName" class="regInput" required>
                        <label for="surname">Your Surname<span class="requiredField">*</span></label>
                        <input type="text" placeholder="Surname" name="surname" class="regInput" required>
                        <label for="mi">Your Middle Initial</label>
                        <input type="text" placeholder="Middle Initial" name="mi" class="regInput">
                        <label for="contactNum">Your Contact Number</label>
                        <input type="number" placeholder="+63" name="contactNum" min="0" maxlength="12" minlength="12" class="regInput">
                        <label for="email">Your Email</label>
                        <input type="email" placeholder="youremail@email.com" name="email" class="regInput">
                        <label for="inviterRelationship">Your relationship to who invited you</label>
                        <select class="ui fluid dropdown" id="inviterRelationship" aria-required="true" class="regInput" onchange='ifOthers(this.value);'>
                            <optgroup label="Relationship">
                                <option selected disabled>Relationship</option>
                                <option value="friend">Friend</option>
                                <option value="mother">Mother</option>
                                <option value="father">Father</option>
                                <option value="others">others</option>
                            </optgroup>
                        </select>
                        <label for="othersinput" id="specify" style="display: none;">Please Specify<span class="requiredField">*</span></label>
                        <input type="text" name="relationship" id="othersInput" style='display:none;' required/>
                        <button class="ui button registerBtn">
                            Register
                        </button>
                    </div>
                </div>  
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js"></script>
    <script type="text/javascript">
        function ifOthers(val){
            var othersInput = document.getElementById('othersInput');
            var specify = document.getElementById('specify');
            if(val == 'others'){
                othersInput.style.display='block';
                specify.style.display='block';
                othersInput.value = null;
            }else if(val != 'others'){  
                othersInput.style.display='none';
                specify.style.display='none';
                othersInput.value = val;
            }
        }
        
        $('.exitFlash').click(() => {
            $('.flashMsg').css({"display": "none"});
            $('.moveForm').css({"margin": "50px auto"})
        });
        </script> 
</body>
</html>